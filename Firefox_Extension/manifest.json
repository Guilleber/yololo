{
  "manifest_version": 3,
  "name": "Text Highlight Button",
  "version": "1.1",
  "description": "Shows a button next to highlighted text.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
